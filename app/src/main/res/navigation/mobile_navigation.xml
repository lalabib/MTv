    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_movie">

    <fragment
        android:id="@+id/navigation_movie"
        android:name="com.lalabib.project.mtv.ui.movie.MovieFragment"
        android:label="@string/movie"
        tools:layout="@layout/fragment_movie" />

    <fragment
        android:id="@+id/navigation_tv"
        android:name="com.lalabib.project.mtv.ui.tv.TvFragment"
        android:label="@string/tv_shows"
        tools:layout="@layout/fragment_tv" />

    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.lalabib.project.mtv.ui.favorite.FavoriteFragment"
        android:label="@string/title_fav"
